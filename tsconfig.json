{
	"extends": "@sindresorhus/tsconfig",
	"compilerOptions": {
		"outDir": "dist",
		"baseUrl": ".",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"declaration": false,
		"removeComments": true,
		"paths": {
			"@components/*": ["./src/components/*"],
			"@utils/*": ["./src/utils/*"],
			"@panes/*": ["./src/panes/*"],
			"@stores/*": ["./src/stores/*"]
		}
	},
	"include": ["src"]
}
